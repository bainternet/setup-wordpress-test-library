{
  "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "noEmitOnError": true,
      "outDir": "./lib",
      "sourceMap": false,
      "declaration": false,
      "removeComments": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src/**.ts", "test/**.ts"]
}
